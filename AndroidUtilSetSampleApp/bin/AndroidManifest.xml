<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nhncorp.utilsettest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
   
    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.nhncorp.utilsettest" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <uses-library android:name="android.test.runner" />
        
        <activity
            android:name="com.nhncorp.utilsettest.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.nhncorp.utilsettest.common.CommonTestActivity"
            >
        </activity>
        
        <activity
            android:name="com.nhncorp.utilsettest.ui.ActivityUtilsTestActivity">
        </activity>
        
        <activity
            android:name="com.nhncorp.utilsettest.storage.DiskUtilsTestAcitivity">
        </activity>
        
        <activity
            android:name="com.nhncorp.utilsettest.input.InputTestActivity">
        </activity>
        
        <activity
            android:name="com.nhncorp.utilsettest.network.NetworkTestActivity">
        </activity>
            
    </application>

</manifest>
